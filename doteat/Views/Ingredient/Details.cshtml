@model Ingredient
@{
    ViewBag.Title = $"{Model.Name} Details";
}

<h1>@Model.Name Details</h1>
<hr />
@if (Model.ProductIngredients != null && Model.ProductIngredients.Any())
{
    <h3 style="margin-top:1rem">Products</h3>
    <table class="table" style="margin-top:1.5rem">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Description</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var productIngredient in Model.ProductIngredients)
            {
                <tr>
                    <td>@productIngredient.Product.ProductName</td>
                    <td>@productIngredient.Product.Description</td>
                    <td>€ @productIngredient.Product.Price</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger" role="alert">
        <h4 style="font-weight:400">There are no products with this ingredient !</h4>
    </div>
}
<a asp-action="Index">Back to the list</a>